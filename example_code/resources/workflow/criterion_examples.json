{
  "simple_criterion": {
    "description": "Direct field comparison using jsonPath and operations",
    "example": {
      "type": "simple",
      "jsonPath": "$.customerType",
      "operation": "EQUALS",
      "value": "premium"
    }
  },
  "group_criterion": {
    "description": "Logical combination of conditions with AND/OR/NOT operators (supports nesting)",
    "example": {
      "type": "group",
      "operator": "AND",
      "conditions": [
        {
          "type": "simple",
          "jsonPath": "$.creditScore",
          "operation": "GREATER_OR_EQUAL",
          "value": 700
        },
        {
          "type": "simple",
          "jsonPath": "$.annualRevenue",
          "operation": "GREATER_THAN",
          "value": 1000000
        }
      ]
    }
  },
  "function_criterion": {
    "description": "Custom client-side evaluation via CyodaCriterion components",
    "example": {
      "type": "function",
      "function": {
        "name": "example_function_name_returns_bool",
        "config": {
          "attachEntity": true,
          "calculationNodesTags": "validation,criteria",
          "responseTimeoutMs": 5000,
          "retryPolicy": "FIXED"
        },
        "criterion": {
          "type": "simple",
          "jsonPath": "$.sampleFieldB",
          "operation": "GREATER_THAN",
          "value": 100
        }
      }
    }
  },
  "supported_operations": [
    "EQUALS", "NOT_EQUAL", "IS_NULL", "NOT_NULL", 
    "GREATER_THAN", "GREATER_OR_EQUAL", "LESS_THAN", "LESS_OR_EQUAL",
    "CONTAINS", "STARTS_WITH", "ENDS_WITH", 
    "NOT_CONTAINS", "NOT_STARTS_WITH", "NOT_ENDS_WITH", 
    "MATCHES_PATTERN", "BETWEEN", "BETWEEN_INCLUSIVE"
  ],
  "supported_operators": ["AND", "OR", "NOT"],
  "jsonPath_reference": {
    "custom_fields": "Use $.fieldName for business entity fields",
    "meta_fields": "Use fieldName (no prefix) for built-in meta-fields",
    "supported_meta_fields": ["state", "previousTransition", "creationDate", "lastUpdateTime"]
  }
}

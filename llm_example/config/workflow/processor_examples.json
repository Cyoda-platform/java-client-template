{
  "processor_configuration": {
    "description": "Processor configuration examples with execution modes and options",
    "sync_processor": {
      "name": "example_sync_processor",
      "executionMode": "SYNC",
      "config": {
        "attachEntity": true,
        "calculationNodesTags": "sync_processing",
        "responseTimeoutMs": 3000,
        "retryPolicy": "FIXED"
      }
    },
    "async_same_tx_processor": {
      "name": "example_async_same_tx_processor",
      "executionMode": "ASYNC_SAME_TX",
      "config": {
        "attachEntity": true,
        "calculationNodesTags": "async_processing",
        "responseTimeoutMs": 5000,
        "retryPolicy": "EXPONENTIAL_BACKOFF"
      }
    },
    "async_new_tx_processor": {
      "name": "example_async_new_tx_processor",
      "executionMode": "ASYNC_NEW_TX",
      "config": {
        "attachEntity": false,
        "calculationNodesTags": "background_processing",
        "responseTimeoutMs": 10000,
        "retryPolicy": "LINEAR_BACKOFF"
      }
    }
  },
  "execution_modes": {
    "SYNC": "Synchronous execution (default) - blocks until completion",
    "ASYNC_SAME_TX": "Asynchronous execution in the same transaction",
    "ASYNC_NEW_TX": "Asynchronous execution in new transaction"
  },
  "configuration_options": {
    "attachEntity": "Whether to attach entity data to the request (boolean)",
    "calculationNodesTags": "Tags for calculation node selection (string)",
    "responseTimeoutMs": "Response timeout in milliseconds (integer)",
    "retryPolicy": "Retry policy for failed executions (FIXED, EXPONENTIAL_BACKOFF, LINEAR_BACKOFF)"
  },
  "processor_chain_example": {
    "description": "Multiple processors in a single transition",
    "processors": [
      {
        "name": "validation_processor",
        "executionMode": "SYNC",
        "config": {
          "attachEntity": true,
          "calculationNodesTags": "validation",
          "responseTimeoutMs": 2000,
          "retryPolicy": "FIXED"
        }
      },
      {
        "name": "business_logic_processor",
        "executionMode": "ASYNC_NEW_TX",
        "config": {
          "attachEntity": true,
          "calculationNodesTags": "business_logic",
          "responseTimeoutMs": 8000,
          "retryPolicy": "EXPONENTIAL_BACKOFF"
        }
      },
      {
        "name": "notification_processor",
        "executionMode": "ASYNC_NEW_TX",
        "config": {
          "attachEntity": false,
          "calculationNodesTags": "notifications",
          "responseTimeoutMs": 5000,
          "retryPolicy": "LINEAR_BACKOFF"
        }
      }
    ]
  }
}

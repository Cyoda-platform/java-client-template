{
  "version": "1.0",
  "name": "Subscriber",
  "desc": "Subscriber lifecycle workflow for cat fact subscription management",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "subscribe",
          "next": "active",
          "manual": false,
          "processors": [
            {
              "name": "SubscriberValidationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "update_subscriber",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "SubscriberValidationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "unsubscribe",
          "next": "inactive",
          "manual": true
        }
      ]
    },
    "inactive": {
      "transitions": [
        {
          "name": "resubscribe",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "SubscriberValidationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    }
  }
}

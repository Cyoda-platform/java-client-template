{
  "version": "1.0",
  "name": "UploadBatch",
  "desc": "Workflow for managing bulk upload operations of HN items from JSON files",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "auto_upload",
          "next": "uploaded",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchInitProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "uploaded": {
      "transitions": [
        {
          "name": "validate_file",
          "next": "validated",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchValidationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "UploadBatchValidCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "start_extraction",
          "next": "extracting",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchExtractionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 30000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ]
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "extracting": {
      "transitions": [
        {
          "name": "start_processing",
          "next": "processing",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchProcessingProcessor",
              "executionMode": "ASYNC_SAME_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 15000,
                "retryPolicy": "LINEAR"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "UploadBatchExtractionCompleteCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "processing": {
      "transitions": [
        {
          "name": "complete_batch",
          "next": "completed",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchCompletionProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "UploadBatchAllItemsCompleteCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "partial_completion",
          "next": "partially_completed",
          "manual": false,
          "processors": [
            {
              "name": "UploadBatchPartialCompletionProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "UploadBatchSomeItemsCompleteCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "completed": {
      "transitions": []
    },
    "partially_completed": {
      "transitions": [
        {
          "name": "retry_failed_items",
          "next": "processing",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchRetryFailedItemsProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ]
        }
      ]
    },
    "failed": {
      "transitions": [
        {
          "name": "retry_batch",
          "next": "uploaded",
          "manual": true,
          "processors": [
            {
              "name": "UploadBatchRetryProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "UploadBatchRetryableCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    }
  }
}

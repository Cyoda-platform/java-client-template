{
  "version": "1.0",
  "name": "Order",
  "desc": "Order lifecycle workflow managing order processing states",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "place_order",
          "next": "placed",
          "manual": false,
          "processors": [
            {
              "name": "OrderPlacementProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "placed": {
      "transitions": [
        {
          "name": "confirm_order",
          "next": "confirmed",
          "manual": true,
          "processors": [
            {
              "name": "OrderConfirmationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "OrderValidityCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "cancel_order",

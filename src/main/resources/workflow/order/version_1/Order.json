{
    "version": "1.0",
    "name": "Order Workflow",
    "desc": "Workflow for managing order states and transitions in the Purrfect Pets application.",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "create_order",
                    "next": "placed",
                    "manual": false,
                    "processors": [
                        {
                            "name": "OrderCreationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "placed": {
            "transitions": [
                {
                    "name": "approve_order",
                    "next": "approved",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderApprovalProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "OrderValidationCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                },
                {
                    "name": "cancel_order",
                    "next": "cancelled",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderCancellationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "approved": {
            "transitions": [
                {
                    "name": "deliver_order",
                    "next": "delivered",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderDeliveryProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "OrderReadyForDeliveryCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                },
                {
                    "name": "cancel_approved_order",
                    "next": "cancelled",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderCancellationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "OrderCancellationAllowedCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "delivered": {
            "transitions": [
                {
                    "name": "return_order",
                    "next": "returned",
                    "manual": true,
                    "processors": [
                        {
                            "name": "OrderReturnProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "OrderReturnEligibilityCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "cancelled": {
            "transitions": []
        },
        "returned": {
            "transitions": []
        }
    }
}
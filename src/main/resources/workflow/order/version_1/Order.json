{
    "version": "1.0",
    "name": "Order Workflow",
    "desc": "Manages order lifecycle from creation through delivery",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "CREATE_ORDER_FROM_PAID",
                    "next": "WaitingToFulfill",
                    "manual": false,
                    "processors": [
                        {
                            "name": "OrderCreateFromPaidProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "WaitingToFulfill": {
            "transitions": [
                {
                    "name": "START_PICKING",
                    "next": "Picking",
                    "manual": true
                }
            ]
        },
        "Picking": {
            "transitions": [
                {
                    "name": "READY_TO_SEND",
                    "next": "WaitingToSend",
                    "manual": true
                }
            ]
        },
        "WaitingToSend": {
            "transitions": [
                {
                    "name": "MARK_SENT",
                    "next": "Sent",
                    "manual": true
                }
            ]
        },
        "Sent": {
            "transitions": [
                {
                    "name": "MARK_DELIVERED",
                    "next": "Delivered",
                    "manual": true
                }
            ]
        }
    }
}
{
  "version": "1.0",
  "name": "Order",
  "desc": "Order lifecycle workflow for multi-channel retailer",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "create_order",
          "next": "draft",
          "manual": false
        }
      ]
    },
    "draft": {
      "transitions": [
        {
          "name": "submit_order",
          "next": "submitted",
          "manual": true,
          "processors": [
            {
              "name": "ValidateOrderProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "OrderValidationCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "update_draft",
          "next": "draft",
          "manual": true
        },
        {
          "name": "cancel_order",
          "next": "cancelled",
          "manual": true,
          "processors": [
            {
              "name": "CancelOrderProcessor",

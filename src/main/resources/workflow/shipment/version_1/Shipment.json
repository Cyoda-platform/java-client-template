{
  "version": "1.0",
  "name": "Shipment",
  "desc": "Shipment lifecycle workflow for order fulfillment tracking",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "create_shipment",
          "next": "picking",
          "manual": false
        }
      ]
    },
    "picking": {
      "transitions": [
        {
          "name": "complete_picking",
          "next": "waiting_to_send",
          "manual": true,
          "processors": [
            {
              "name": "UpdateShipmentStatusProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "waiting_to_send": {
      "transitions": [
        {
          "name": "mark_sent",
          "next": "sent",
          "manual": true,
          "processors": [
            {
              "name": "UpdateShipmentStatusProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "sent": {
      "transitions": [
        {
          "name": "mark_delivered",
          "next": "delivered",
          "manual": true,
          "processors": [
            {
              "name": "UpdateShipmentStatusProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "delivered": {
      "transitions": []
    }
  }
}

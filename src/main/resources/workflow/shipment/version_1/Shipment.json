{
  "version": "1.0",
  "name": "Shipment",
  "desc": "Shipment workflow for fulfillment tracking",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "CREATE_SHIPMENT",
          "next": "picking",
          "manual": false
        }
      ]
    },
    "picking": {
      "transitions": [
        {
          "name": "READY_TO_SEND",
          "next": "waiting_to_send",
          "manual": true
        }
      ]
    },
    "waiting_to_send": {
      "transitions": [
        {
          "name": "MARK_SENT",
          "next": "sent",
          "manual": true
        }
      ]
    },
    "sent": {
      "transitions": [
        {
          "name": "MARK_DELIVERED",
          "next": "delivered",
          "manual": true
        }
      ]
    },
    "delivered": {
      "transitions": []
    }
  }
}

{
  "version": "1.0",
  "name": "Accrual",
  "desc": "Daily interest accrual workflow for active loans",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "start_accrual",
          "next": "calculating",
          "manual": false,
          "processors": [
            {
              "name": "ValidateAccrualRequest",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "calculating": {
      "transitions": [
        {
          "name": "compute_interest",
          "next": "calculated",
          "manual": false,
          "processors": [
            {
              "name": "ComputeDailyInterest",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "calculated": {
      "transitions": [
        {
          "name": "post_accrual",
          "next": "posted",
          "manual": false,
          "processors": [
            {
              "name": "PostAccrualEntries",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "posted": {
      "transitions": []
    }
  }
}

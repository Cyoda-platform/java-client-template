{
  "version": "1.0",
  "name": "HnItem",
  "desc": "Workflow for Hacker News items with creation, validation, indexing, and completion states",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "auto_create",
          "next": "created",
          "manual": false,
          "processors": [
            {
              "name": "CreateHnItemProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate_item",
          "next": "validated",
          "manual": true,
          "processors": [
            {
              "name": "ValidateHnItemProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ]
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "index_item",
          "next": "indexed",
          "manual": true,
          "processors": [
            {
              "name": "IndexHnItemProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "IsValidHnItemCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 2000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "indexed": {
      "transitions": [
        {
          "name": "complete_processing",
          "next": "completed",
          "manual": true
        }
      ]
    },
    "completed": {
      "transitions": [
        {
          "name": "reprocess",
          "next": "validated",
          "manual": true
        }
      ]
    }
  }
}

{
  "version": "1.0",
  "name": "HNItem",
  "desc": "Workflow for managing Hacker News items from ingestion through validation, processing, and final storage",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "auto_ingest",
          "next": "ingested",
          "manual": false,
          "processors": [
            {
              "name": "HNItemIngestionProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "ingested": {
      "transitions": [
        {
          "name": "validate_item",
          "next": "validated",
          "manual": false,
          "processors": [
            {
              "name": "HNItemValidationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "HNItemValidCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "HNItemFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "check_duplicates",
          "next": "deduplicated",
          "manual": false,
          "processors": [
            {
              "name": "HNItemDeduplicationProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ]
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "HNItemFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "deduplicated": {
      "transitions": [
        {
          "name": "resolve_hierarchy",
          "next": "hierarchy_resolved",
          "manual": false,
          "processors": [
            {
              "name": "HNItemHierarchyProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 15000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "HNItemHierarchyValidCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "HNItemFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "hierarchy_resolved": {
      "transitions": [
        {
          "name": "index_item",
          "next": "indexed",
          "manual": false,
          "processors": [
            {
              "name": "HNItemIndexingProcessor",
              "executionMode": "ASYNC_SAME_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 8000,
                "retryPolicy": "LINEAR"
              }
            }
          ]
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "HNItemFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "indexed": {
      "transitions": [
        {
          "name": "complete_processing",
          "next": "completed",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "HNItemCompleteCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "HNItemFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "completed": {
      "transitions": []
    },
    "failed": {
      "transitions": [
        {
          "name": "retry_processing",
          "next": "ingested",
          "manual": true,
          "processors": [
            {
              "name": "HNItemRetryProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "HNItemRetryableCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    }
  }
}

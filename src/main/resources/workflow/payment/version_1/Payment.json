{
  "version": "1.0",
  "name": "Payment",
  "desc": "Payment workflow for OMS - INITIATED â†’ PAID/FAILED/CANCELED with auto-payment",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "create_payment",
          "next": "initiated",
          "manual": false
        }
      ]
    },
    "initiated": {
      "transitions": [
        {
          "name": "start_dummy_payment",
          "next": "processing",
          "manual": true,
          "processors": [
            {
              "name": "CreateDummyPayment",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "processing": {
      "transitions": [
        {
          "name": "auto_mark_paid",
          "next": "paid",
          "manual": false,
          "processors": [
            {
              "name": "AutoMarkPaidAfter3s",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true
        },
        {
          "name": "mark_canceled",
          "next": "canceled",
          "manual": true
        }
      ]
    },
    "paid": {
      "transitions": []
    },
    "failed": {
      "transitions": []
    },
    "canceled": {
      "transitions": []
    }
  }
}

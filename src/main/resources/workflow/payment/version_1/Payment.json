{
  "version": "1.0",
  "name": "Payment",
  "desc": "Payment lifecycle workflow for OMS system with auto-approval",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "start_dummy_payment",
          "next": "initiated",
          "manual": false,
          "processors": [
            {
              "name": "AutoMarkPaidAfter3sProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "initiated": {
      "transitions": [
        {
          "name": "auto_mark_paid",
          "next": "paid",
          "manual": true
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true
        },
        {
          "name": "cancel_payment",
          "next": "canceled",
          "manual": true
        }
      ]
    },
    "paid": {
      "transitions": []
    },
    "failed": {
      "transitions": [
        {
          "name": "retry_payment",
          "next": "initiated",
          "manual": true,
          "processors": [
            {
              "name": "AutoMarkPaidAfter3sProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "canceled": {
      "transitions": []
    }
  }
}

{
    "version": "1.0",
    "name": "Mail Workflow",
    "desc": "Description of the workflow for Mail",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "transition_to_pending",
                    "next": "pending",
                    "manual": false
                }
            ]
        },
        "pending": {
            "transitions": [
                {
                    "name": "transition_to_happy_processing",
                    "next": "happy_processing",
                    "manual": false,
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "MailIsHappyCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                },
                {
                    "name": "transition_to_gloomy_processing",
                    "next": "gloomy_processing",
                    "manual": false,
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "MailIsGloomyCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "happy_processing": {
            "transitions": [
                {
                    "name": "transition_to_sent",
                    "next": "sent",
                    "manual": false,
                    "processors": [
                        {
                            "name": "MailSendHappyMailProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_failed",
                    "next": "failed",
                    "manual": false
                }
            ]
        },
        "gloomy_processing": {
            "transitions": [
                {
                    "name": "transition_to_sent",
                    "next": "sent",
                    "manual": false,
                    "processors": [
                        {
                            "name": "MailSendGloomyMailProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "transition_to_failed",
                    "next": "failed",
                    "manual": false
                }
            ]
        },
        "failed": {
            "transitions": [
                {
                    "name": "transition_to_pending",
                    "next": "pending",
                    "manual": true
                }
            ]
        },
        "sent": {
            "transitions": []
        }
    }
}
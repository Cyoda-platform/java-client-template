{
  "version": "1.0",
  "name": "GLLine",
  "desc": "GL line item workflow for individual journal entries",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "create_line",
          "next": "created",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "GLLineValidationCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "include_in_batch",
          "next": "included",
          "manual": false
        }
      ]
    },
    "included": {
      "transitions": [
        {
          "name": "export_line",
          "next": "exported",
          "manual": false
        }
      ]
    },
    "exported": {
      "transitions": [
        {
          "name": "post_line",
          "next": "posted",
          "manual": false
        }
      ]
    },
    "posted": {
      "transitions": []
    }
  }
}

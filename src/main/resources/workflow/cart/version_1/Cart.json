{
  "version": "1.0",
  "name": "Cart",
  "desc": "Cart lifecycle workflow for shopping cart management",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "create_on_first_add",
          "next": "active",
          "manual": false,
          "processors": [
            {
              "name": "CreateCartProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "active": {
      "transitions": [
        {
          "name": "add_item",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "RecalculateTotalsProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "decrement_item",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "RecalculateTotalsProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "remove_item",
          "next": "active",
          "manual": true,
          "processors": [
            {
              "name": "RecalculateTotalsProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "open_checkout",
          "next": "checking_out",
          "manual": true
        }
      ]
    },
    "checking_out": {
      "transitions": [
        {
          "name": "checkout",
          "next": "converted",
          "manual": true,
          "processors": [
            {
              "name": "CheckoutProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "back_to_active",
          "next": "active",
          "manual": true
        }
      ]
    },
    "converted": {
      "transitions": []
    }
  }
}

{
  "version": "1.0",
  "name": "SearchQuery",
  "desc": "Workflow for managing search operations for HN items with query validation, execution, and result caching",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "auto_create",
          "next": "created",
          "manual": false,
          "processors": [
            {
              "name": "SearchQueryInitProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "created": {
      "transitions": [
        {
          "name": "validate_query",
          "next": "validated",
          "manual": false,
          "processors": [
            {
              "name": "SearchQueryValidationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "SearchQueryValidCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "validated": {
      "transitions": [
        {
          "name": "start_execution",
          "next": "executing",
          "manual": false,
          "processors": [
            {
              "name": "SearchQueryExecutionProcessor",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 20000,
                "retryPolicy": "EXPONENTIAL"
              }
            }
          ]
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "executing": {
      "transitions": [
        {
          "name": "complete_search",
          "next": "completed",
          "manual": false,
          "processors": [
            {
              "name": "SearchQueryCompletionProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 5000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "SearchQueryExecutionCompleteCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "mark_failed",
          "next": "failed",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryFailureProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "completed": {
      "transitions": [
        {
          "name": "cache_results",
          "next": "cached",
          "manual": false,
          "processors": [
            {
              "name": "SearchQueryCachingProcessor",
              "executionMode": "ASYNC_SAME_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 8000,
                "retryPolicy": "LINEAR"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "SearchQueryCacheableCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "cached": {
      "transitions": [
        {
          "name": "expire_cache",
          "next": "expired",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryExpirationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "expired": {
      "transitions": [
        {
          "name": "refresh_query",
          "next": "validated",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryRefreshProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "failed": {
      "transitions": [
        {
          "name": "retry_search",
          "next": "created",
          "manual": true,
          "processors": [
            {
              "name": "SearchQueryRetryProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ],
          "criterion": {
            "type": "function",
            "function": {
              "name": "SearchQueryRetryableCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    }
  }
}

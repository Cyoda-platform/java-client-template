{
    "version": "1.0",
    "name": "Pet Workflow",
    "desc": "Workflow for managing pet states in Purrfect Pets application",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "auto_add_pet",
                    "next": "available",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetRegistrationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "available": {
            "transitions": [
                {
                    "name": "reserve_pet",
                    "next": "pending",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReservationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "PetAvailabilityCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                },
                {
                    "name": "sell_pet_direct",
                    "next": "sold",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetSaleProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "PetAvailabilityCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        },
        "pending": {
            "transitions": [
                {
                    "name": "cancel_reservation",
                    "next": "available",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReservationCancelProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "sold": {
            "transitions": [
                {
                    "name": "return_pet",
                    "next": "available",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReturnProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "PetReturnEligibilityCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                },
                {
                    "name": "complete_sale",
                    "next": "sold",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetSaleProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ],
                    "criterion": {
                        "type": "function",
                        "function": {
                            "name": "PetReservationValidCriterion",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    }
                }
            ]
        }
    }
}
{
    "version": "1.0",
    "name": "Pet Workflow",
    "desc": "Workflow for managing the Pet entity lifecycle in Purrfect Pets system",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "transition_to_none",
                    "next": "none",
                    "manual": false
                }
            ]
        },
        "none": {
            "transitions": [
                {
                    "name": "make_available",
                    "next": "available",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetAvailabilityProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "available": {
            "transitions": [
                {
                    "name": "reserve_pet",
                    "next": "pending",
                    "manual": true,
                    "processors": [
                        {
                            "name": "PetReservationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "direct_sale",
                    "next": "sold",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetSaleProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "pending": {
            "transitions": [
                {
                    "name": "cancel_reservation",
                    "next": "available",
                    "manual": true
                },
                {
                    "name": "complete_sale",
                    "next": "sold",
                    "manual": false,
                    "processors": [
                        {
                            "name": "PetSaleProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "sold": {
            "transitions": []
        }
    }
}
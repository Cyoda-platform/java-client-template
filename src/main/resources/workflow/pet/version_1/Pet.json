{
  "version": "1.0",
  "name": "Pet",
  "desc": "Pet lifecycle workflow for Purrfect Pets store",
  "initialState": "initial_state",
  "active": true,
  "states": {
    "initial_state": {
      "transitions": [
        {
          "name": "initialize_pet",
          "next": "available",
          "manual": false,
          "processors": [
            {
              "name": "PetInitializationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "available": {
      "transitions": [
        {
          "name": "reserve_pet",
          "next": "reserved",
          "manual": true,
          "processors": [
            {
              "name": "PetReservationProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "mark_unavailable",
          "next": "unavailable",
          "manual": true
        }
      ]
    },
    "reserved": {
      "transitions": [
        {
          "name": "complete_adoption",
          "next": "adopted",
          "manual": true,
          "processors": [
            {
              "name": "PetAdoptionProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 3000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "cancel_reservation",
          "next": "available",
          "manual": true
        }
      ]
    },
    "adopted": {
      "transitions": []
    },
    "unavailable": {
      "transitions": [
        {
          "name": "mark_available",
          "next": "available",
          "manual": true
        }
      ]
    }
  }
}

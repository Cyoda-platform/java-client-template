{
    "version": "1.0",
    "name": "User Workflow",
    "desc": "Workflow for managing user states and transitions",
    "initialState": "initial_state",
    "active": true,
    "states": {
        "initial_state": {
            "transitions": [
                {
                    "name": "register_user",
                    "next": "registered",
                    "manual": false
                }
            ]
        },
        "registered": {
            "transitions": [
                {
                    "name": "activate_user",
                    "next": "active",
                    "manual": false,
                    "processors": [
                        {
                            "name": "UserActivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "deactivate_unverified",
                    "next": "inactive",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserDeactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "active": {
            "transitions": [
                {
                    "name": "suspend_user",
                    "next": "suspended",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserSuspensionProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "deactivate_user",
                    "next": "inactive",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserDeactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "suspended": {
            "transitions": [
                {
                    "name": "reactivate_user",
                    "next": "active",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserReactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                },
                {
                    "name": "deactivate_suspended",
                    "next": "inactive",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserDeactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        },
        "inactive": {
            "transitions": [
                {
                    "name": "reactivate_inactive",
                    "next": "active",
                    "manual": true,
                    "processors": [
                        {
                            "name": "UserReactivationProcessor",
                            "executionMode": "SYNC",
                            "config": {
                                "calculationNodesTags": "cyoda_application"
                            }
                        }
                    ]
                }
            ]
        }
    }
}
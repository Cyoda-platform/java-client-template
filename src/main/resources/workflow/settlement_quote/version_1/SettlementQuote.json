{
  "version": "1.0",
  "name": "SettlementQuote",
  "desc": "Early settlement quote workflow from request through acceptance or expiration",
  "initialState": "initial",
  "active": true,
  "states": {
    "initial": {
      "transitions": [
        {
          "name": "request_quote",
          "next": "calculating",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "SettlementQuoteValidationCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          }
        },
        {
          "name": "validation_failed",
          "next": "validation_error",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "SettlementQuoteValidationFailedCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          },
          "processors": [
            {
              "name": "AttachSettlementQuoteValidationErrorProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "validation_error": {
      "transitions": [
        {
          "name": "FIX",
          "next": "initial",
          "manual": true,
          "processors": [
            {
              "name": "ClearValidationErrorReasonProcessor",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "calculating": {
      "transitions": [
        {
          "name": "calculate_settlement",
          "next": "quoted",
          "manual": false,
          "processors": [
            {
              "name": "CalculateSettlementAmount",
              "executionMode": "ASYNC_NEW_TX",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        }
      ]
    },
    "quoted": {
      "transitions": [
        {
          "name": "accept_quote",
          "next": "accepted",
          "manual": true,
          "processors": [
            {
              "name": "AcceptSettlementQuote",
              "executionMode": "SYNC",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          ]
        },
        {
          "name": "expire_quote",
          "next": "expired",
          "manual": false,
          "criterion": {
            "type": "function",
            "function": {
              "name": "SettlementQuoteExpiredCriterion",
              "config": {
                "attachEntity": true,
                "calculationNodesTags": "cyoda_application",
                "responseTimeoutMs": 10000,
                "retryPolicy": "FIXED"
              }
            }
          }
        }
      ]
    },
    "accepted": {
      "transitions": []
    },
    "expired": {
      "transitions": [
        {
          "name": "regenerate_quote",
          "next": "calculating",
          "manual": true
        }
      ]
    }
  }
}

{
  "version": "1.0",
  "name": "Job Workflow",
  "desc": "Workflow for Job entity managing the ingestion job lifecycle",
  "initialState": "SCHEDULED",
  "active": true,
  "states": {
    "SCHEDULED": {
      "transitions": [
        {
          "name": "start_ingestion",
          "next": "INGESTING",
          "manual": false
        }
      ]
    },
    "INGESTING": {
      "transitions": [
        {
          "name": "ingestion_success",
          "next": "SUCCEEDED",
          "manual": false,
          "processors": [
            {
              "name": "FetchNobelLaureatesProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        },
        {
          "name": "ingestion_failure",
          "next": "FAILED",
          "manual": false
        }
      ]
    },
    "SUCCEEDED": {
      "transitions": [
        {
          "name": "notify_subscribers",
          "next": "NOTIFIED_SUBSCRIBERS",
          "manual": false,
          "processors": [
            {
              "name": "NotifySubscribersProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "FAILED": {
      "transitions": [
        {
          "name": "notify_subscribers",
          "next": "NOTIFIED_SUBSCRIBERS",
          "manual": false,
          "processors": [
            {
              "name": "NotifySubscribersProcessor",
              "executionMode": "SYNC",
              "config": {
                "calculationNodesTags": "cyoda_application"
              }
            }
          ]
        }
      ]
    },
    "NOTIFIED_SUBSCRIBERS": {
      "transitions": []
    }
  }
}
